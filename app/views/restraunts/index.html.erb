<p id="notice"><%= notice %></p>

<h1>Listing Restraunts</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restraunts.each do |restraunt| %>
      <tr>
        <td><%= restraunt.name %></td>
        <td><%= restraunt.address %></td>
        <td><%= restraunt.phone %></td>
        <td><%= restraunt.website %></td>
        <td><%= link_to 'Show', restraunt,class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_restraunt_path(restraunt),class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', restraunt, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restraunt', new_restraunt_path,class: "btn btn-link" %>
